<table class="full">
	<thead>
		<tr class="alt">
			<th>Id</th>
			<th>Controle</th>
			<th>Data</th>
			<th></th>
		</tr>
	</thead>
	
	<tbody>
		<% @controls.each do |controle| %>
		<tr class="alt">
			<td><%= link_to controle.id, controle %></td>
			<td><%= link_to controle.nome, controle %></td>
			<td><%= l controle.created_at, :format=>:short %></td>
			<td>
			<!-- Icons -->
			<%= link_to image_tag('icons/edit.png'), edit_control_path(controle)%>
			<%= link_to image_tag('icons/delete.png'), controle, :method=>:delete %>
			</td>
		</tr>
		<% end %>
		</tbody>
</table>