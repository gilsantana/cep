<script>
var chart;
$(document).ready(function() {
   chart = new Highcharts.Chart({
      chart: {
         renderTo: 'container',
         defaultSeriesType: 'line',
         marginRight: 130,
         marginBottom: 25
      },
      title: {
         text: 'Controle Estatístico de Processo - Controle por Variáveis',
         x: -20 //center
      },
      subtitle: {
         text: 'Média',
         x: -20
      },
      xAxis: {
         categories: [<%= (1..(@lc_media.size+1)).to_a.join(",") %>]
      },
      yAxis: {
         title: {
            text: 'Valor'
         },
         plotLines: [{
            value: 0,
            width: 1,
            color: '#808080'
         }]

      },
      tooltip: {
         formatter: function() {
                   return '<b>'+ this.series.name +'</b><br/>'+
               this.x +': '+ this.y;
         }
      },
      legend: {
         layout: 'vertical',
         align: 'right',
         verticalAlign: 'top',
         x: -10,
         y: 100,
         borderWidth: 0
      },
      series: [{
         name: 'LC',
         data: <%= formatar_dados @lc_media, :valor %>
      },{
	     name: 'LCI',
	     data: <%= formatar_dados @lci_media, :valor %>
	  },{
		 name: 'LCS',
		 data: <%= formatar_dados @lcs_media, :valor %>
	  }	,{
			 name: 'Média', 
			 data: <%= formatar_dados @control.samples, :media, @lcs_media, :valor %>
		  }]
   });
   
   
});


</script>












