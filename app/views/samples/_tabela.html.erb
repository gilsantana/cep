<table class="full">
	<thead>
		<tr class="alt">
			<th>Amostra</th>
			<th>Data</th>
			<th>Ítens</th>
			<th>Média</th>
			<th>Amplitude</th>
			<th >Por Variáveis<th>
			<th></th>
		</tr>
	</thead>
	
	<tbody>
		<% @samples.each_with_index do |amostra, i| %>
		<tr class="<%= cycle('alt','')%>">
			<td><%= i+1 %></td>
			<td><%= l amostra.tempo, :format=>:short %></td>
			<td><%= amostra.items.size %></td>
			<td><%= amostra.media.round(2) %></td>
			<td><%= amostra.amplitude.round(2) %></td>
			<td>
			<!-- Icons -->
			<%= link_to image_tag('icons/edit.png'), edit_control_sample_path(@control, amostra)%>
			</td>
		</tr>
		<% end %>
		</tbody>
</table>

