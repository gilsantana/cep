<VirtualHost *:80>

  ServerName  <%= domain_name %>
  ServerAlias www.<%= domain_name %>

  DocumentRoot <%= current_path %>/public
  
  RewriteEngine on
  RewriteCond %{HTTP_HOST} ^www\.<%= domain_prefix %>\.<%= domain_suffix %>$ [NC]
  RewriteRule ^(.*)$ http://<%= domain_prefix %>.<%= domain_suffix %>$1 [L,R=301]
</VirtualHost>
